# Outreach Automation System - Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=outreach_automation

# ===========================================
# GMASS EMAIL INTEGRATION
# ===========================================
GMASS_API_KEY=your_gmass_api_key_here
GMASS_FROM_EMAIL=your_business_email@gmail.com
GMASS_FROM_NAME="Your Business Name"

# ===========================================
# DATAFORSEO API (Domain Analysis)
# ===========================================
DATAFORSEO_LOGIN=your_dataforseo_login
DATAFORSEO_PASSWORD=your_dataforseo_password

# ===========================================
# TOMBA API (Email Discovery)
# ===========================================
TOMBA_API_KEY=your_tomba_api_key

# ===========================================
# OPENAI API (AI Content Generation)
# ===========================================
OPENAI_API_KEY=your_openai_api_key

# ===========================================
# GMAIL IMAP MONITORING
# ===========================================
IMAP_EMAIL=your_business_email@gmail.com
IMAP_PASSWORD=your_gmail_app_password

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=America/New_York

# ===========================================
# SECURITY
# ===========================================
# Generate a random 32-character key for encryption
APP_KEY=your_32_character_encryption_key_here

# ===========================================
# BACKGROUND PROCESSING
# ===========================================
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MINUTES=30
ENABLE_BACKGROUND_PROCESSING=true

# ===========================================
# EMAIL RATE LIMITING
# ===========================================
EMAILS_PER_DAY_LIMIT=500
EMAILS_PER_HOUR_LIMIT=50
EMAIL_COOLDOWN_MINUTES=5

# ===========================================
# API RATE LIMITING
# ===========================================
DATAFORSEO_REQUESTS_PER_MINUTE=10
TOMBA_REQUESTS_PER_MINUTE=20
OPENAI_REQUESTS_PER_MINUTE=30