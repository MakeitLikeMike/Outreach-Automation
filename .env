# ============================================================================
# LOCAL DEVELOPMENT CONFIGURATION
# ============================================================================
# This is your local development configuration

# ============================================================================
# LOCAL DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=''
DB_DATABASE=outreach_automation

# ============================================================================
# API CREDENTIALS (same as production)
# ============================================================================
DATAFORSEO_LOGIN=your_dataforseo_login
DATAFORSEO_PASSWORD=your_dataforseo_password
TOMBA_API_KEY=your_tomba_api_key
CHATGPT_API_KEY=your_openai_api_key
CHATGPT_MODEL=gpt-3.5-turbo

# Gmail OAuth (local)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost/outreach_operation_automation/gmail_callback.php

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
CSRF_SECRET_KEY=local_dev_secret_key
SESSION_SECRET=local_dev_session_secret

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost/outreach_operation_automation

# Email Rate Limiting (development - more liberal)
EMAIL_RATE_LIMIT_PER_HOUR=100
EMAIL_RATE_LIMIT_PER_DAY=500
DEFAULT_EMAIL_DELAY_MINUTES=5

# API Rate Limiting (development)
TOMBA_RATE_LIMIT_PER_HOUR=200
DATAFORSEO_RATE_LIMIT_PER_HOUR=100
CHATGPT_RATE_LIMIT_PER_MINUTE=10

# Background Processing
ENABLE_BACKGROUND_PROCESSING=true
EMAIL_SEARCH_BATCH_SIZE=20
EMAIL_SEARCH_BACKGROUND_INTERVAL=120
REPLY_CHECK_INTERVAL_MINUTES=10

# Features
ENABLE_IMMEDIATE_EMAIL_SEARCH=true
ENABLE_AUTO_REPLY_MONITORING=true
AUTO_FORWARD_INTERESTED_REPLIES=true
AUTO_CLASSIFY_REPLIES=true

# Quality Filters
MIN_DOMAIN_RATING=20
MIN_ORGANIC_TRAFFIC=1000
MIN_RANKING_KEYWORDS=100
MIN_STATUS_200_PAGES=80
MAX_HOMEPAGE_TRAFFIC_PERCENTAGE=70
MIN_QUALITY_SCORE=60

# Security
SESSION_LIFETIME=7200
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION=300